<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".view.login.cartSkipUserLogin.VerifyCodeWithSkipUserActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="4dp">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/back_arrow_icon" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:orientation="vertical"
        android:paddingTop="4dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/metropolis_medium"
        android:text="Enter Verification Code"
        android:textColor="@color/black"
        android:textSize="15dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/metropolis_medium"
        android:text="Enter the 4-digit verification code sent to " />


        <EditText
            android:id="@+id/enterOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="54dp"
            android:paddingStart="32dp"
            android:maxLength="4"
            android:inputType="number"
            android:layout_gravity="center_horizontal"
            android:paddingEnd="32dp"
            android:fontFamily="@font/metropolis_medium"
            android:hint="- - - -" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/resend_otp_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/grey_outline_bg"
                android:fontFamily="@font/metropolis_medium"
                android:text="Resend in 27 sec"
                android:layout_marginEnd="6dp"
                android:textAllCaps="false"
                android:textSize="16sp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/edit_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/colorprimery_all_corner_radious_bg"
                android:fontFamily="@font/metropolis_medium"
                android:text="Edit Phone No."
                android:layout_marginStart="6dp"
                android:textColor="@color/colorPrimary"
                android:textAllCaps="false"
                android:textSize="16sp" />


        </LinearLayout>


    </LinearLayout>




</RelativeLayout>