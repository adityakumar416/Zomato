<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_left_right_rounded_corners"
    tools:context=".view.location.bottomSheets.EnterCompleteAddressBottomSheetFragment">

    <RelativeLayout
        android:id="@+id/close_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="@drawable/circle_black_bg">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:background="@drawable/close_icon"
            android:backgroundTint="@color/white"
            android:padding="8dp" />
    </RelativeLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/close_button"
        android:layout_above="@+id/bottom_btn_card"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/confirmYourAddressLayout"
                android:layout_width="match_parent"
                android:layout_marginTop="22dp"
                android:visibility="gone"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/confirm_location_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="18dp"
                    android:fontFamily="@font/metropolis_medium"
                    android:text="Confirm your Address"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_below="@id/confirm_location_text"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_margin="12dp"
                            app:cardCornerRadius="14dp"
                            android:layout_height="200dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/deliveredlocationimage"/>

                        </com.google.android.material.card.MaterialCardView>


                        <RelativeLayout
                            android:id="@+id/selectedLocation"
                            android:layout_below="@id/text1"
                            android:layout_width="wrap_content"
                            android:layout_marginEnd="6dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginStart="18dp"
                            android:layout_height="wrap_content">


                            <ImageView
                                android:id="@+id/location_icon"
                                android:layout_width="20dp"
                                android:layout_height="18dp"
                                android:layout_marginTop="6dp"
                                android:scaleType="fitXY"
                                android:backgroundTint="@color/colorPrimary"
                                android:background="@drawable/location_icon" />

                            <TextView
                                android:id="@+id/delivery_at"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/location_icon"
                                android:fontFamily="@font/metropolis_medium"
                                android:text="Delivery at Work"
                                android:textStyle="bold"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="2dp"
                                android:textSize="16sp" />


                            <TextView
                                android:id="@+id/address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/delivery_at"
                                android:layout_marginStart="8dp"
                                android:layout_toEndOf="@id/location_icon"
                                android:fontFamily="@font/metropolis_medium"
                                android:text="New Ashok Nagar"
                                android:textSize="14sp" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/confirmReceiverDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/receiver_details"
                            android:layout_marginBottom="10dp">

                            <ImageView
                                android:id="@+id/phone_icon2"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="14dp"
                                android:padding="6dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/phone_icon" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="2dp"
                                android:layout_toEndOf="@id/phone_icon2"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/confirm_userName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/metropolis_medium"
                                    android:textColor="#191919"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/confirm_userNumber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:fontFamily="@font/metropolis_bold"
                                    android:textColor="#191919" />


                            </LinearLayout>



                        </RelativeLayout>


                    </LinearLayout>







                </androidx.cardview.widget.CardView>




            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/EnterCompleteAddressLayout"
                android:layout_width="match_parent"
                android:layout_marginTop="22dp"
                android:visibility="visible"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/user_block_lication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="18dp"
                    android:fontFamily="@font/metropolis_medium"
                    android:text="Enter Complete Address"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/receiver_details_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_block_lication"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="18dp"
                    app:cardCornerRadius="16dp">

                    <LinearLayout
                        android:id="@+id/receiver_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_below="@id/text5"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginEnd="18dp"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusBottomEnd="8dp"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            app:boxCornerRadiusTopStart="8dp"
                            app:boxStrokeColor="@android:color/black"
                            app:endIconMode="clear_text">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/receiver_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/metropolis_medium"
                                android:hint="Receiver's name"
                                android:textColorHint="@android:color/darker_gray"
                                />
                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_below="@id/text5"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="18dp"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusBottomEnd="8dp"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            app:boxCornerRadiusTopStart="8dp"
                            app:boxStrokeColor="@android:color/black"
                            app:endIconMode="clear_text">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/receiver_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/metropolis_medium"
                                android:hint="Receiver's Number"
                                android:maxLength="10"
                                android:inputType="number"
                                android:textColorHint="@android:color/darker_gray"
                                />
                        </com.google.android.material.textfield.TextInputLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="May be used to assist delivery"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="16dp"/>

                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/user_details_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/metropolis_medium"
                            android:text="Receiver details for this address"
                            android:textColor="#191919"
                            android:textSize="14sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/text3"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="10dp">

                            <ImageView
                                android:id="@+id/phone_icon"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="14dp"
                                android:padding="6dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/phone_icon" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="2dp"
                                android:layout_toEndOf="@id/phone_icon"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/userName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/metropolis_medium"
                                    android:text="Aditya Kumar,"
                                    android:textColor="#191919"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/userNumber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:fontFamily="@font/metropolis_bold"
                                    android:text="+91-8979116063"
                                    android:textColor="#191919" />


                            </LinearLayout>


                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="32dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="18dp"
                                android:background="@drawable/next_icon"
                                android:backgroundTint="#7C7C85" />


                        </RelativeLayout>


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/receiver_details_layout"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="16dp">

                    <RelativeLayout
                        android:layout_marginBottom="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/text4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/metropolis_medium"
                            android:text="Save address as"
                            android:textColor="#191919"
                            android:textSize="14sp" />

                        <HorizontalScrollView
                            android:id="@+id/address_type_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:layout_below="@id/text4"
                            android:scrollbars="none">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:orientation="horizontal">

                                <!-- Existing Home Card -->
                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/home"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginBottom="4dp"
                                    android:layout_marginEnd="4dp"
                                    android:layout_marginStart="12dp"

                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="6dp"
                                    app:cardElevation="1dp">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="32dp"
                                        android:orientation="horizontal"
                                        android:paddingTop="6dp"
                                        android:paddingBottom="6dp">

                                        <ImageView
                                            android:id="@+id/home_icon"
                                            android:layout_width="16dp"
                                            android:layout_height="16dp"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="14dp"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/home_icon" />

                                        <TextView
                                            android:id="@+id/home_text"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="6dp"
                                            android:layout_marginEnd="14dp"
                                            android:layout_toEndOf="@id/home_icon"
                                            android:fontFamily="@font/metropolis_medium"
                                            android:text="Home"
                                            android:textSize="14sp" />

                                    </RelativeLayout>

                                </com.google.android.material.card.MaterialCardView>

                                <!-- Existing Work Card -->
                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/work"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="4dp"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="6dp"
                                    app:cardElevation="1dp">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="32dp"
                                        android:orientation="horizontal"
                                        android:paddingTop="6dp"
                                        android:paddingBottom="6dp">

                                        <ImageView
                                            android:id="@+id/work_icon"
                                            android:layout_width="16dp"
                                            android:layout_height="16dp"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="14dp"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/suitcase_icon" />

                                        <TextView
                                            android:id="@+id/work_text"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="6dp"
                                            android:layout_marginEnd="14dp"
                                            android:layout_toEndOf="@id/work_icon"
                                            android:fontFamily="@font/metropolis_medium"
                                            android:text="Work"
                                            android:textSize="14sp" />

                                    </RelativeLayout>

                                </com.google.android.material.card.MaterialCardView>

                                <!-- New Hotel Card -->
                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/hotel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="4dp"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="6dp"
                                    app:cardElevation="1dp">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="32dp"
                                        android:orientation="horizontal"
                                        android:paddingTop="6dp"
                                        android:paddingBottom="6dp">

                                        <ImageView
                                            android:id="@+id/hotel_icon"
                                            android:layout_width="16dp"
                                            android:layout_height="16dp"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="14dp"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/building_icon" />

                                        <TextView
                                            android:id="@+id/hotel_text"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="6dp"
                                            android:layout_marginEnd="14dp"
                                            android:layout_toEndOf="@id/hotel_icon"
                                            android:fontFamily="@font/metropolis_medium"
                                            android:text="Hotel"
                                            android:textSize="14sp" />

                                    </RelativeLayout>

                                </com.google.android.material.card.MaterialCardView>

                                <!-- New Other Card -->
                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/other"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="4dp"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="6dp"
                                    app:cardElevation="1dp">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="32dp"
                                        android:orientation="horizontal"
                                        android:paddingTop="6dp"
                                        android:paddingBottom="6dp">

                                        <ImageView
                                            android:id="@+id/other_icon"
                                            android:layout_width="16dp"
                                            android:layout_height="16dp"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="14dp"
                                            android:background="@drawable/location_icon"
                                            android:backgroundTint="@color/black"
                                            android:scaleType="fitXY" />

                                        <TextView
                                            android:id="@+id/other_text"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="6dp"
                                            android:layout_marginEnd="14dp"
                                            android:layout_toEndOf="@id/other_icon"
                                            android:fontFamily="@font/metropolis_medium"
                                            android:text="Other"
                                            android:textSize="14sp" />

                                    </RelativeLayout>

                                </com.google.android.material.card.MaterialCardView>

                            </LinearLayout>

                        </HorizontalScrollView>


                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/selectedAddressLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/address_type_layout"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="18dp"
                            android:layout_marginEnd="18dp"
                            app:cardBackgroundColor="#FAF9FF"
                            app:cardCornerRadius="8dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginBottom="10dp">


                                <TextView
                                    android:id="@+id/selectedAddress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="22dp"
                                    android:layout_toStartOf="@id/applyCoupons"
                                    android:fontFamily="@font/metropolis_medium"
                                    android:textColor="#AFAEB4"
                                    android:lineSpacingExtra="4dp"
                                    android:text="Block D,New Ashok Nagar, New Delhi"
                                    />


                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/applyCoupons"
                                    android:layout_width="76dp"
                                    android:layout_height="28dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="bottom"
                                    android:layout_marginEnd="14dp"
                                    android:visibility="visible"
                                    app:cardBackgroundColor="#F5F3F3F3"
                                    app:cardCornerRadius="8dp"
                                    app:cardElevation="1dp"
                                    app:strokeColor="#908B8C"
                                    app:strokeWidth="0.8dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/metropolis_bold"
                                        android:text="Change"
                                        android:textColor="@color/colorPrimary2"
                                        android:textSize="12sp" />


                                </com.google.android.material.card.MaterialCardView>


                            </RelativeLayout>


                        </com.google.android.material.card.MaterialCardView>


                        <TextView
                            android:id="@+id/text5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/selectedAddressLayout"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/metropolis_medium"
                            android:text="Updated based on your exact map pin"
                            android:textSize="13sp" />


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/editTextLayoutflatHouseNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/text5"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="18dp"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusBottomEnd="8dp"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            app:boxCornerRadiusTopStart="8dp"
                            app:boxStrokeColor="@android:color/black"
                            app:endIconMode="clear_text">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/flat_houseNo_floor_building"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/metropolis_medium"
                                android:hint="Flat / House no / Floor / Building *"
                                android:inputType="textEmailAddress"
                                android:textColorHint="@android:color/darker_gray"
                                android:textSize="15sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/nearbyLandmarkLayout"
                            android:layout_below="@id/editTextLayoutflatHouseNo"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="14dp"
                            android:layout_marginEnd="18dp"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusBottomEnd="8dp"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            app:boxCornerRadiusTopStart="8dp"
                            app:boxStrokeColor="@android:color/black"
                            app:endIconMode="clear_text">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/emailInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/metropolis_medium"
                                android:hint="Nearby landmark (optional)"
                                android:inputType="textEmailAddress"
                                android:textColorHint="@android:color/darker_gray"
                                android:textSize="15sp" />
                        </com.google.android.material.textfield.TextInputLayout>



                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/area_sector_location_editTextLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/nearbyLandmarkLayout"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="12dp"
                            android:visibility="gone"
                            android:layout_marginEnd="18dp"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusBottomEnd="8dp"
