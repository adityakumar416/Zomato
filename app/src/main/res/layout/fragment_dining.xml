<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/top_image_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/color_1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@color/black">

                </ImageView>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/top_image"
                    android:layout_width="match_parent"
                    android:layout_height="246dp"
                    android:layout_below="@id/color_1"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/ImageView.Corner"
                    app:srcCompat="@drawable/dining_top_image" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp">

                <RelativeLayout
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="52dp">

                    <RelativeLayout
                        android:id="@+id/user_location"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="106dp"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:id="@+id/location_icon"
                            android:layout_width="36dp"
                            android:layout_height="32dp"
                            android:layout_centerVertical="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/location_icon" />

                        <TextView
                            android:id="@+id/user_block_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/location_icon"
                            android:fontFamily="@font/metropolis_bold"
                            android:text=""
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@id/address"
                            android:layout_toEndOf="@id/user_block_location"
                            android:scaleType="fitXY"
                            android:src="@drawable/arrow_down_icon" />


                        <TextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/user_block_location"
                            android:layout_toEndOf="@id/location_icon"
                            android:fontFamily="@font/metropolis_medium"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/profile"
                        app:cardCornerRadius="66dp">


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/profile"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        app:cardBackgroundColor="#BAC6FF"
                        app:cardCornerRadius="66dp">

                        <!-- <ImageView
                             android:layout_width="34dp"
                             android:layout_height="34dp"
                             android:scaleType="fitXY"
                             android:src="@drawable/join_prime_image" />
         -->

                        <ImageView
                            android:id="@+id/userImage"
                            android:layout_width="match_parent"
                            android:scaleType="centerCrop"
                            android:layout_height="match_parent"
                            android:textColor="@android:color/holo_blue_dark" />

                        <ImageView
                            android:id="@+id/user_first_character"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:layout_margin="8dp"
                            android:background="@drawable/user_icon"
                            android:textColor="@android:color/holo_blue_dark"
                            />

                    </androidx.cardview.widget.CardView>

                    <ImageView
                        android:id="@+id/menu_icon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="18dp"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/menu_icon"
                        android:textColor="@android:color/holo_blue_dark"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/toolbar"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/search_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:layout_marginTop="4dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="6dp"
                        app:strokeWidth="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/search_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="12dp"
                                android:background="@drawable/baseline_search_24"
                                android:backgroundTint="@color/colorPrimary"
                                android:scaleType="fitXY" />


                            <EditText
                                android:id="@+id/search"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="50dp"
                                android:layout_toEndOf="@id/search_icon"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:hint="Search Restaurant"
                                android:textSize="16sp" />

                            <com.google.android.material.divider.MaterialDivider
                                android:id="@+id/divider"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_alignEnd="@id/search"
                                android:layout_marginStart="6dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toEndOf="@id/divider">

                                <ImageView
                                    android:id="@+id/mic_icon"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:layout_centerInParent="true"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/mic_icon"
                                    android:backgroundTint="@color/colorPrimary"
                                    android:scaleType="fitXY" />

                            </RelativeLayout>


                        </RelativeLayout>


                    </com.google.android.material.card.MaterialCardView>


                </RelativeLayout>


            </RelativeLayout>

            <HorizontalScrollView
                android:id="@+id/horizontal_chips_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/top_image_view"
                android:layout_marginTop="8dp"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Chip 1 -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/chip_1"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="4dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="1dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:orientation="horizontal"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp">

                            <ImageView
                                android:id="@+id/icon1_chip_1"
                                android:layout_width="14dp"
                                android:layout_height="16dp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/filter_icon" />

                            <TextView
                                android:id="@+id/text1_chip_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="6dp"
                                android:layout_toEndOf="@id/icon1_chip_1"
                                android:fontFamily="@font/metropolis_bold"
                                android:text="Filers"
                                android:textSize="13sp" />

                            <ImageView
                                android:id="@+id/icon2_chip_1"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="6dp"
                                android:layout_toRightOf="@id/text1_chip_1"
                                android:src="@drawable/drop_down_icon" />

                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Chip 2 -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/chip_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="1dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:orientation="horizontal"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp">

                            <ImageView
                                android:id="@+id/icon1_chip_2"
                                android:layout_width="14dp"
                                android:layout_height="16dp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/percent_tag_icon" />


                            <TextView
                                android:id="@+id/text1_chip_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="6dp"
                                android:layout_marginEnd="10dp"
                                android:layout_toEndOf="@id/icon1_chip_2"
                                android:fontFamily="@font/metropolis_bold"
                                android:text="Offers"
                                android:textSize="13sp" />


                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Chip 3 -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/chip_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="1dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:orientation="horizontal"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp">


                            <TextView
                                android:id="@+id/text1_chip_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/metropolis_bold"
                                android:text="Near &amp; Top Rated"
                                android:textSize="13sp" />
                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Chip 4 -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/chip_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="1dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:orientation="horizontal"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp">


                            <TextView
                                android:id="@+id/text1_chip_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/metropolis_bold"
                                android:text="Rating 4.5+"
                                android:textSize="13sp" />


                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Chip 5 -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/chip_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="1dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:orientation="horizontal"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp">

                            <ImageView
                                android:id="@+id/icon1_chip_5"
                                android:layout_width="14dp"
                                android:layout_height="16dp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/percent_tag_icon" />


                            <TextView
                                android:id="@+id/text1_chip_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="6dp"
                                android:layout_marginEnd="10dp"
                                android:layout_toEndOf="@id/icon1_chip_5"
                                android:fontFamily="@font/metropolis_bold"
                                android:text="Veg-only"
                                android:textSize="13sp" />


                        </RelativeLayout>


                    </com.google.android.material.card.MaterialCardView>

                    <!-- Chip 6 -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/chip_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="1dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:orientation="horizontal"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp">


                            <TextView
                                android:id="@+id/text1_chip_6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/metropolis_bold"
                                android:text="Pet Friendly"
                                android:textSize="13sp" />

                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/chip_outdoor_seating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="1dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:orientation="horizontal"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp">

                            <TextView
                                android:id="@+id/text_outdoor_seating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/metropolis_bold"
                                android:text="Outdoor Seating"
                                android:textSize="13sp" />
                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Chip for Services Alcohol -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/chip_services_alcohol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="1dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:orientation="horizontal"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp">

                            <TextView
                                android:id="@+id/text_services_alcohol"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/metropolis_bold"
                                android:text="Services Alcohol"
                                android:textSize="13sp" />
                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Chip for Open Now -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/chip_open_now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="1dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:orientation="horizontal"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp">

                            <TextView
                                android:id="@+id/text_open_now"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/metropolis_bold"
                                android:text="Open Now"
                                android:textSize="13sp" />
                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Chip for Cafes -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/chip_cafes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="1dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:orientation="horizontal"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp">

                            <TextView
                                android:id="@+id/text_cafes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/metropolis_bold"
                                android:text="Cafes"
                                android:textSize="13sp" />
                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Chip for Fine Dining -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/chip_fine_dining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="1dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:orientation="horizontal"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp">

                            <TextView
                                android:id="@+id/text_fine_dining"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/metropolis_bold"
                                android:text="Fine Dining"
                                android:textSize="13sp" />
                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </HorizontalScrollView>


            <LinearLayout
                android:id="@+id/divider_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/horizontal_chips_layout"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    app:dividerColor="#F4F4F4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/metropolis_medium"
                    android:gravity="center_horizontal"
                    android:text="IN THE LIMELIGHT"
                    android:textColor="#777B89"
                    android:textSize="15sp" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    app:dividerColor="#F4F4F4" />
            </LinearLayout>


            <!--    <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="12dp"
                    android:id="@+id/recyclerView"
                    />-->

            <!--  <com.denzcoskun.imageslider.ImageSlider
                  android:id="@+id/image_slider"
                  android:layout_width="wrap_content"
                  android:layout_height="200dp"
                  android:background="@color/green"
                  android:layout_below="@id/divider_view"
                  app:iss_auto_cycle="false"
                  app:iss_delay="1000"
                  app:iss_period="1000" />-->


            <androidx.cardview.widget.CardView
                android:id="@+id/barCard1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/divider_view"
                android:layout_margin="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">


                <ImageView
                    android:id="@+id/autoImageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/bar_image1" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/discount_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center_vertical"
                            android:scaleType="fitXY"
                            android:src="@drawable/percent_tag_icon" />

                        <TextView
                            android:id="@+id/discountText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="2dp"
                            android:fontFamily="@font/metropolis_bold"
                            android:text="Up to 30% OFF"
                            android:textColor="@color/white"
                            android:textSize="12sp" />


                    </LinearLayout>


                    <TextView
                        android:id="@+id/barName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/text11"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="12dp"
